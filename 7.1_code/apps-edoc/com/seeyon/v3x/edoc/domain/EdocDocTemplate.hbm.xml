<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
<class name="com.seeyon.v3x.edoc.domain.EdocDocTemplate" lazy="false" table="edoc_doc_template">
	<id
        name="id"
        type="long"
        column="id"
        length="20"
    >
		<generator class="assigned" />
	</id>
	<property
        name="name"
        type="string"
        column="name"
        not-null="true"
        length="255"
    />
	<property
        name="type"
        type="int"
        column="type"
        not-null="true"
        length="4"
    />
    <property
        name="description"
        type="string"
        column="description"
        not-null="false"
        length="255"
    />
	<property
        name="templateFileId"
        type="long"
        column="template_file_id"
        length="20"
    />
	<property
        name="createTime"
        type="timestamp"
        column="create_time"
        not-null="true"
        length="19"
    />
	<property
        name="createUserId"
        type="long"
        column="create_user_id"
        not-null="false"
        length="20"
    />
	<property
        name="lastUserId"
        type="long"
        column="last_user_id"
        not-null="false"
        length="20"
    />
    <property
        name="lastUpdate"
        type="timestamp"
        column="last_update"
        not-null="true"
        length="19"
    />
    <property
        name="status"
        type="int"
        column="status"
        not-null="true"
        length="4"
    />
     <property
        name="domainId"
        type="long"
        column="domain_id"
        not-null="true"
        length="20"
    />
    
     <property
        name="textType"
        type="string"
        column="text_type"
        length="2"
    /> 
        <set name="templateAcls" cascade="all" inverse="true" lazy="false">
        	<key>
        		<column name="doc_template_id" not-null="true" />
        	</key>
        	<one-to-many class="com.seeyon.v3x.edoc.domain.EdocDocTemplateAcl" />
        </set>

</class>
</hibernate-mapping>
