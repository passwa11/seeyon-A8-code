<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping package="com.seeyon.v3x.edoc.domain">
	<class
		name="EdocSummaryRelation"
		table="edoc_summary_relation"
	>
		<meta attribute="sync-DAO">false</meta>

		<meta attribute="sync-DAO">false</meta>

		<meta attribute="sync-DAO">false</meta>

		<id
			name="id"
			type="java.lang.Long"
			column="id"
		>
			<generator class="assigned"/>
		</id>

		<property
			name="summaryId"
			column="summary_id"
			type="java.lang.Long"
			not-null="false"
			length="20"
		/>
		
		<property
			name="relationEdocId"
			column="relation_edoc_id"
			type="java.lang.Long"
			not-null="false"
			length="20"
		/>
		<property
			name="edocType"
			column="edoc_type"
			type="integer"
			not-null="false"
			length="4"
		/>
		<property
			name="memberId"
			column="member_id"
			type="java.lang.Long"
			not-null="false"
			length="20"
		/>
		<property
			name="type"
			column="type"
			type="java.lang.Integer"
			not-null="false"
			length="4"
		/>
		<property
            name="recAffairId"
            column="rec_affair_id"
            type="java.lang.Long"
            not-null="false"
            length="20"
        />
	</class>	
</hibernate-mapping>