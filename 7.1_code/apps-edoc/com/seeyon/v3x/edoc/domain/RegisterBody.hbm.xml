<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
<class 
    name="com.seeyon.v3x.edoc.domain.RegisterBody" 
    table="edoc_register_body"
    lazy="false"
>
    <id
        name="id"
        type="long"
        column="id"
        length="20"
    >
        <generator class="assigned" />
    </id>
    <property
        name="content"
        type="string"
        column="content"
    />
    <property
        name="contentType"
        type="string"
        column="content_type"
        not-null="true"
        length="20"
    />
    <property
        name="contentNo"
        type="integer"
        column="content_no"
        length="4"
    />
    <property
        name="createTime"
        type="timestamp"
        column="create_time"
        length="19"
    />
    <!-- 
	<one-to-one name="edocRegister"  fetch="select">
	</one-to-one>
	 
	<one-to-one name="edocRegister" column="register_id" class="com.seeyon.v3x.edoc.domain.EdocRegister" cascade="all" unique="true"/>
    </one-to-one>	-->
    <many-to-one name="edocRegister" class="com.seeyon.v3x.edoc.domain.EdocRegister" fetch="select">
    	<column name="register_id"></column>
    </many-to-one>
	
</class>
</hibernate-mapping>
