<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
<class 
    name="com.seeyon.v3x.exchange.domain.EdocExchangeTurnRec" 
    table="edoc_exchange_turn_rec"
    lazy="true"
>
    <id
        name="id"
        type="long"
        column="id"
        length="20"
    >
        <generator class="assigned" />
    </id>
    <property 
        name="edocId"
        type="long"
        column="edoc_id"
        length="20"
    />
    <property
        name="opinion"
        type="string"
        column="opinion"
    />
    <property
        name="userId"
        type="long"
        column="user_id"
        length="20"
    />
    <property
        name="userName"
        type="string"
        column="user_name"
        length="100"
    />
	
	<property
        name="typeAndIds"
        type="string"
        column="typeAndIds"
        length="2000"
    />
    <property
        name="createTime"
        type="timestamp"
        column="create_time"
        length="19"
    />	
    <property 
        name="exchangeType"
        type="int"
        column="exchange_type"
        length="4"
    />
    <property
        name="exchangeUserId"
        type="long"
        column="exchange_user_id"
        length="20"
    />
</class>
</hibernate-mapping>